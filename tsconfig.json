{
  "extends": "@create-figma-plugin/tsconfig",
  "compilerOptions": {
    "typeRoots": ["node_modules/@figma", "node_modules/@types"],
    "baseUrl": "./src/",
    "paths": {
      "api/*": ["ui/api/*"],
      "utils/*": ["ui/utils/*"],
      "hooks/*": ["ui/hooks/*"],
      "styles/*": ["ui/styles/*"],
      "components/*": ["ui/components/*"],
      "layout/*": ["ui/components/layout/*"],
      "form/*": ["ui/components/form/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
